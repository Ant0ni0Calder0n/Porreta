rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funciones de ayuda
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCommunityMember(communityId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.communities[communityId] != null;
    }
    
    function isCommunityAdmin(communityId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.communities[communityId] == 'admin';
    }
    
    // Reglas para usuarios
    match /users/{userId} {
      allow read: if isUser(userId);
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if false;
    }
    
    // Reglas para comunidades
    match /communities/{communityId} {
      // Permitir lectura si eres miembro O si est치s autenticado (para poder verificar contrase침a al unirse)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isCommunityAdmin(communityId) || 
                      (isCommunityMember(communityId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['membersCount']));
      allow delete: if false;
    }
    
    // Reglas para rondas
    match /rounds/{roundId} {
      // Permitir lectura si est치s autenticado (para queries por communityId)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isCommunityMember(request.resource.data.communityId);
      allow update: if isCommunityAdmin(resource.data.communityId);
      allow delete: if false;
    }
    
    // Reglas para apuestas
    match /bets/{betId} {
      // Permitir lectura si est치s autenticado (para queries por roundId)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                      isCommunityMember(request.resource.data.communityId) &&
                      isUser(request.resource.data.userId);
      allow update: if isUser(resource.data.userId);
      allow delete: if false;
    }
    
    // Reglas para log de notificaciones (solo escritura por servidor)
    match /notifications_log/{logId} {
      allow read: if false;
      allow write: if false;
    }
  }
}
